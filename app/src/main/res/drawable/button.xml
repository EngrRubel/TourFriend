<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="@color/classic_colorPrimary" />
        <stroke
            android:width="1dp"
            android:color="@color/classic_colorAccent" />
        <corners
            android:radius="15dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
<item>
    <shape>
        <gradient
            android:startColor="@color/classic_colorAccent"
            android:endColor="@color/classic_colorPrimary"
            android:angle="270" />

        <corners
            android:radius="20dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
</selector>