<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/classic_colorPrimary"
    android:theme="@style/Theme.AppCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@color/classic_colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/classic_colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Expense Status"
        android:id="@+id/expense_status"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expense_list_view"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:background="@color/light"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/classic_colorPrimary"
            android:textColorHint="@color/classic_colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Total Expense"/>
        <TextView
            android:textStyle="bold"
            android:background="@color/light"
            android:textSize="18sp"
            android:padding="5dp"
            android:textColor="@color/classic_colorPrimary"
            android:textColorHint="@color/classic_colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Amount"
            android:id="@+id/total_expense"/>
    </LinearLayout>

</LinearLayout>